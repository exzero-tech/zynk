{
  "name": "zynk-api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for ZYNK Platform",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": ["api-gateway", "express", "typescript", "microservices"],
  "author": "ZYNK Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.5",
    "axios": "^1.6.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.24",
    "eslint": "^9.33.0",
    "@eslint/js": "^9.33.0",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
