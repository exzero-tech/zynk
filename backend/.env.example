# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require&pgbouncer=true&connection_limit=10
DIRECT_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Service Ports
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
CHARGER_SERVICE_PORT=3002
ANALYTICS_SERVICE_PORT=3003

# Service URLs (for inter-service communication)
USER_SERVICE_URL=http://user-service:3001
CHARGER_SERVICE_URL=http://charger-service:3002
ANALYTICS_SERVICE_URL=http://analytics-service:3003
API_GATEWAY_URL=http://api-gateway:3000

# PayHere Payment Gateway (for charger-service)
PAYHERE_MERCHANT_ID=your-payhere-merchant-id
PAYHERE_MERCHANT_SECRET=your-payhere-merchant-secret

# Node Environment
NODE_ENV=development

# Logging Level (optional)
LOG_LEVEL=info